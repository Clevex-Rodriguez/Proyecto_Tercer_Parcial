#: import Factory kivy.factory.Factory

TercerParcialWindow:
    Pantalla1:
    Pantalla2:
    PantallaEstudiante:
    PantallaAdministrativos:

<Pantalla1>:
    name: 'pantalla1'
    BoxLayout:
        orientation: 'vertical'
        #size_hint: (None, None)
        size: (1000, 600)
        canvas:
            # Color:
            #     rgba: [0, 0, 0, 1]
            Rectangle:
                pos: (50, 25)
                size: (900, 550)
                source: 'imagenes/fondo_unt_1.png'
        # Label:
        #     text: 'UNIVERSIDAD NACIONAL DE TRUJILLO'
        #     font_size: 50
        #     bold: True
        #     color: [22/255, 41/255, 105/255]
        # Label:
        #     text: 'UNT'
        #     font_size: 90
        #     color: [0, 0, 1]
        #     bold: True
        #     italic: True
        Label:
            text: 'BIBLIOTECA CENTRAL'
            font_size: 70
            color: [0, 0, 1]
            bold: True
        FloatLayout:
            size_hint: (None, None)
            Button:
                text: 'Next'
                pos: (800, 50)
                on_release: app.root.current = 'pantalla2'
                Image:
                    pos: (800, 50)
                    source: 'imagenes/imagen.jpg'

<Pantalla2>:
    id: pantalla_2
    name: 'pantalla2'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (None, None)
        size: (500, 400)
        pos: (250, 100)
        canvas:
            Color:
                rgba: [0, 0, 0, 1]
            Rectangle:
                pos: self.pos
                size: self.size 
        Label:
            text: 'BIBLIOTECA CENTRAL- UNT'
            font_size: 60
            color: [0, 0, 1, .5]
            bold: True
            italic: True
        Label:
            text: 'Ingresar como:'
            font_size: 40
        Button:
            text: 'Estudiantes'
            font_name: 'Arial'
            background_color: '#162969'
            #background_normal: ''
            font_size: 30
            on_release: app.root.current = 'pantallaEstudiante'
        Button:
            text: 'Administrativos'
            font_name: 'Arial'
            font_size: 30
            background_color: '#162969'
            on_release: app.root.current = 'pantallaAdministrativos'
        Button:
            text: 'Atrás'
            font_name: 'Arial'
            font_size: 30
            #background_color: '#162969'
            on_release: app.root.current = 'pantalla1'

<PantallaEstudiante>:
    name: 'pantallaEstudiante'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (None, None)
        size: (500, 400)
        pos: (250, 100)
        canvas:
            Color:
                rgba: [0, 0, 0, 1]
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'BIBLIOTECA CENTRAL- UNT'
            font_size: 60
            color: [0, 0, 1, .5]
            bold: True
            italic: True 
        GridLayout:
            cols: 2
            Label:
                text: 'Código'
                font_size: 20
                bold: True
            TextInput:
                font_size: 25
                multiline: False
                bold: True
            Label:
                text: 'Título'
                font_size: 20
                bold: True
                
            TextInput:
                font_size: 25
                multiline: False
                bold: True
            Label:
                text: 'Autor'
                font_size: 20
                bold: True
            TextInput:
                font_size: 25
                multiline: False
                bold: True
        FloatLayout:
            size_hint: (None, None)
            size: (100, 50)
            #pos: (250, 100)
            Button:
                text: 'Buscar'
                font_size: 20
                pos: (450, 50)
                #background_color: '#162969'
                on_release: root.mostrar_busqueda(*args)
            Button:
                text: 'Atrás'
                font_size: 20
                pos: (100, 50)
                on_release: app.root.current = 'pantalla2'

<MostrarBusqueda>:
    auto_dismiss: False
    title: 'BIBLIOTECA CENTRAL - UNT'
    size_hint: (.8, .6)
    BoxLayout:    
        Label:
            text: 'Codigo'
        Label:
            text: 'Titulo'
        Label:
            text: 'Autor'
        
        FloatLayout:
            Button:
                text: 'Buscar'
                size_hint: (.6, .17)
                pos: (750, 255)
                #pos_hint: {'x': .98, 'y': .4}
            Button:
                text: 'Cancelar'
                size_hint: (.6, .17)
                pos: (450, 150)
                #pos_hint: {'x': .3, 'y': .1}
                on_release: root.dismiss()

<PantallaAdministrativos>:
    name: 'pantallaAdministrativos'
    id: Administrativos
    BoxLayout:
        orientation: 'vertical'
        size_hint: (None, None)
        size: (500, 400)
        pos: (250, 100)
        canvas:
            Color:
                rgba: [0, 0, 0, 1]
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'BIBLIOTECA CENTRAL- UNT'
            font_size: 60
            color: [0, 0, 1, .5]
            bold: True
            italic: True
        GridLayout:
            cols: 2
            Label:
            Label:
            Label:
                text: 'Contraseña'
                font_size: 20
                bold: True
            TextInput:
                id: contr
                font_size: 20
                multiline: False
                password: True
                hint_text: 'Contraseña'
            Label:
            Label:  
        FloatLayout:
            size_hint: (None, None)
            size: (100, 50)
            #pos: (250, 100)
            Button:
                id: validar
                text: 'Validar'
                font_size: 20
                pos: (450, 100)
                #background_color: '#162969'
                #on_release: Factory.Contras_vacia().open()
                on_release: root.contr_avisos(*args)
            Button:
                text: 'Atrás'
                font_size: 20
                pos: (100, 50)
                on_release: app.root.current = 'pantalla2'
            Label:
                text: 'Ver contraseña'
                pos: (755, 215)
            CheckBox:
                pos: (820, 215)
                on_active: root.checkbox_click(self, self.active)

<Contras_vacia>:
    auto_dismiss: False
    title: 'BIBLIOTECA CENTRAL - UNT'
    size_hint: (.4, .4)
    BoxLayout:
        orientation: 'vertical'     
        Label:
            text: 'Contraseña vacía'
        Button:
            text: 'Aceptar'
            size_hint: (.3, .3)
            pos_hint: {'x': .35, 'y': .1}
            on_release: root.dismiss()

<Contras_incorrecta>:
    auto_dismiss: False
    title: 'BIBLIOTECA CENTRAL - UNT'
    size_hint: (.4, .4)
    BoxLayout:
        orientation: 'vertical'     
        Label:
            text: 'Contraseña incorrecta'
        Button:
            text: 'Aceptar'
            size_hint: (.3, .3)
            pos_hint: {'x': .35, 'y': .1}
            on_release: root.dismiss()